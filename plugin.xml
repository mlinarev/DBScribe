<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Sample Wizards"
            id="DBScribe">
      </category>
      <wizard
            name="Multi-page Editor file"
            icon="icons/sample.gif"
            category="DBScribe"
            class="dbscribe.wizards.DBScribeSetUpWizard"
            id="dbscribe.wizards.SampleNewWizard">
      </wizard>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="DBScribe.commands.category"
            id="DBScribe.commands.generateDocumentation"
            name="Generate Documentation">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="handlers.GenerateDocumentationHandler"
            commandId="DBScribe.commands.generateDocumentation">
      </handler>
   </extension>
   
 
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="DBScribe.menus.commitMenu"
               label="DBScribe">
            <command
                  commandId="DBScribe.commands.generateDocumentation"
                  id="DBScribe.menus.describeVersionsCommand"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <or>
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.ICompilationUnit">
                           </instanceof>
                        </iterate>
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.IPackageFragment">
                           </instanceof>
                        </iterate>
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.IJavaProject">
                           </instanceof>
                        </iterate>
                        <iterate>
                           <instanceof
                                 value="org.eclipse.jdt.core.IType">
                           </instanceof>
                        </iterate>
                     </or>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      
   </extension>

</plugin>
